@page 
@model IndexModel
@{
    ViewData["Title"] = "Number to words converter";
    ViewData["Header"] = "Number to words converter";
}

<div class="text-center">
    <div class="card-deck">
        <form method="post" class="mt-3">
            <div class="card m-3" style="min-width: 18rem; max-width:100%;">

                <div class="card-header">
                    <h3>@ViewData["Header"]</h3>
                </div>

                <div class="card-body">

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Enter the Amount : </label>
                        <div class="col-sm-6">
                            <input asp-for="NumToWords.number" class="form-control" placeholder="Enter the amount" />
                            <span asp-validation-for="NumToWords.number" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Get Amount in Words</button>
                    <a asp-page="/Index" asp-route-number="" class="btn btn-primary m-1">Clear</a>
                </div>

                <div class="card-footer text-center">
                    <h5>
                        @{
                            if (Model?.NumToWords != null)
                            {
                                <b>@Model.NumToWords.words</b>
                            }
                        }
                    </h5>
                </div>
            </div>
            @section Scripts{
                <partial name="_ValidationScriptsPartial"></partial>
            }
        </form>
    </div>
    <br />
    <p></p>




</div>
